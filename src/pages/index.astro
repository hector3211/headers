---
import Layout from '@/layouts/Layout.astro';
import Hero from "@/components/hero.tsx"
import Footer from "@/components/footer.tsx"
import Featured from "@/components/featured.astro"
import { Button } from '@/components/ui/button';
import { MoveUpRight } from 'lucide-react';
import { Image } from "astro:assets";
import KeyBoard from "@/assets/keyboard.avif"
import { Card, CardContent, CardFooter} from '@/components/ui/card';
import MousePad from "@/assets/mouse-pad.avif"
import HeadPhone from "@/assets/sen-headphones.avif"
---

<Layout>
    <main>
        <Hero client:load/>
        <Featured/>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 py-16 gap-x-5 px-5">
            <Card className='col-auto md:col-span-1'>
                <CardContent className='p-5'>
                    <Image src={MousePad} alt={"index page image"} class={"shadow-lg z-10 w-full"}/>
                </CardContent>
                <CardFooter className='flex flex-col space-y-3 items-start'>
                            <h1 class="text-[60px] font-extrabold drop-shadow-3xl ">DLX Mousepads</h1>
                            <h3 class=" font-light">Check out our new DLX keyboards</h3>
                            <Button>
                                DLX Mousepads
                            <MoveUpRight/>
                            </Button>
                </CardFooter>
            </Card>
            <Card className='col-auto md:col-span-1'>
                <CardContent className='p-5'>
                    <Image src={KeyBoard} alt={"index page image"} class={"relative z-10 w-full shadow-lg"}/>
                </CardContent>
                <CardFooter className='flex flex-col space-y-3 items-center'>
                        <h1 class="text-[60px] font-extrabold">DLX keyboards</h1>
                        <h3 class="text-foreground/90 font-light">Check out our new DLX keyboards</h3>
                        <Button>
                            Shop DLX Keyboards
                            <MoveUpRight/>
                        </Button>
                </CardFooter>
            </Card>
            <Card className='col-auto md:col-span-1'>
                <CardContent className='p-5'>
                    <Image src={HeadPhone} alt={"index page image"} class={"shadow-lg z-10 w-full"}/>
                </CardContent>
                <CardFooter className='flex flex-col space-y-3 items-end'>
                        <h1 class="text-[60px] font-extrabold drop-shadow-3xl ">DLX Collection</h1>
                        <h3 class=" font-light">Check out our new DLX keyboards</h3>
                        <Button>
                            Checkout Headphones
                            <MoveUpRight/>
                        </Button>
                </CardFooter>
            </Card>
        </div>
        <Footer/>
    </main>
</Layout>

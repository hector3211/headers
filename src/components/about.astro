---
import { CheckCircle } from "lucide-astro"


const reasons = [
  "Premium Sound Quality",
  "30-Day Money-Back Guarantee",
  "Free Shipping on Orders Over $100",
  "Expert Customer Support"
]
---

<section class="bg-gray-50 py-12 md:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-12">Why Choose HeadphoneHaven</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {reasons.map((reason) => (
            <div class="flex items-center space-x-3">
              <CheckCircle className="h-6 w-6 text-green-500 flex-shrink-0" />
              <span class="text-lg text-gray-700">{reason}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

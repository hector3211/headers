import Cables from "@/assets/cables.avif";
import MousePad from "@/assets/mouse-pad.avif";
import type { Product } from "@/lib/models";
import type { ImageMetadata } from "astro";

const products: Product[] = [
  {
    id: "1",
    name: "AudioPhile Pro",
    category: "Over-Ear",
    price: 299.99,
    rating: 4,
    src: HeadPhoneTwo,
  },
    {
        id: "2",
        name: "UltraFast USB-C",
        category: "New",
        price: 19.99,
        rating: 5,
        src: Cables,
    },
  {
    id: "3",
    name: "AudioPhile Pro",
    category: "Over-Ear",
    price: 299.99,
    rating: 4,
    src: HeadPhone,
  },
  {
    id: "4",
    name: "ComfortMouse Pad XL",
    category: "Mousepads",
    price: 39.99,
    rating: 5,
    src: MousePad,
  },
    {
        id: "5",
        name: "UltraFast USB-C",
        category: "New",
        price: 19.99,
        rating: 5,
        src: Cables,
    },
  {
    id: "6",

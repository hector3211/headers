    rating: 5,
    src: MousePad,
  },
]
---

<div class="bg-zinc-100 py-16 min-h-[28rem]">
    <h2 class="text-[55px] text-center font-extrabold text-zinc-900 mb-6 text-pretty tracking-tight">Featured</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-2 md:gap-x-2 lg:grid-cols-3 container mx-auto">
          {products.map((product) => (
          <Card className="col-span-1 rounded-none bg-zinc-100 max-w-sm mx-auto">
                <CardContent className="min-h-[8rem] p-5">
                    <Image src={product.src as ImageMetadata} alt={product.name} width={900} height={900} class="w-full h-56" />
                </CardContent>
                <CardFooter className="flex flex-col items-start gap-y-1">
                    <h1 class="font-bold text-xl">
                        {product.name}
                    </h1>
                    <h3 class="text-secondary-foreground/90 font-light">${product.price.toFixed(2)}</h3>
                    <AddToCartButton product={{...product, quantity: 1}} client:load/>
                </CardFooter>
            </Card>
          ))}
      </div>
    </div>

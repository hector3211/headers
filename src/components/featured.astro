---
import { Image } from "astro:assets"
import AddToCartButton from "@/components/add-cart-button.tsx"
import { Card,CardTitle,CardHeader,CardDescription,CardContent,CardFooter } from "./ui/card";
import HeadPhone from "@/assets/headphone-two.png"
import Cables from "@/assets/cables.avif";
import MousePad from "@/assets/mousepad.avif";
import type { Product } from "@/lib/models";
import type { ImageMetadata } from "astro";

const products: Product[] = [
  {
    id: "1",
    name: "AudioPhile Pro",
    category: "Over-Ear",
    price: 299.99,
    rating: 4,
    src: HeadPhone,
  },
    {
        id: "9",
        name: "UltraFast USB-C",
        category: "New",
        price: 19.99,
        rating: 5,
        src: Cables,
    },
  {
    id: "7",
    name: "GamerX Pro",
    category: "Wireless",
    price: 279.99,
    rating: 5,
    src: HeadPhone,
  },
  {
    id: "12",
    name: "ComfortMouse Pad XL",
    category: "Mousepads",
    price: 39.99,
    rating: 5,
    src: MousePad,
  },
]
---

<section class="bg-zinc-100 py-16 min-h-[28rem] border border-zinc-500">
    <h2 class="text-[55px] text-center font-extrabold text-zinc-900 mb-6 text-pretty tracking-tight">Featured</h2>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {products.map((product) => (
          <Card className="rounded-none bg-zinc-100 shadow-none border-0">
                <CardHeader>
                    <CardTitle>{product.name}</CardTitle>
                    <CardDescription>${product.price.toFixed(2)}</CardDescription>
                </CardHeader>
                <CardContent className="min-h-[8rem]">
                    <Image src={product.src as ImageMetadata} alt={product.name} width={900} height={900} class="w-[900px] h-48 object-cover" />
                </CardContent>
                <CardFooter>
                    <AddToCartButton product={{...product, quantity: 1}} client:load/>
                </CardFooter>
            </Card>
          ))}
        </div>
      </div>
    </section>
